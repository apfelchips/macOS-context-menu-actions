# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{md,asc,ascii}]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.{c,h}]
indent_style = tab
indent_size = 8

[Makefile]
indent_style = tab
indent_size = 8

[*.{bat,reg,vbs}]
end_of_line = crlf

[*.reg]
charset = utf-16le
#charset = utf-16le-bom # not supported
